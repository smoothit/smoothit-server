<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
 <managed-bean>
  <managed-bean-name>iopParametersConfig</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.IoPConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>MeteringConfigBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.MeteringConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>componentConfigBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.ComponentConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>ioPConfigBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.IoPConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
  <managed-bean>
  <managed-bean-name>hapConfigBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.HapConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>logBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.LogBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>iPRangeConfigBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.IPRangeConfigBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>securityAdminRoleBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.SecurityAdminRoleBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>securityAdminUserBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.SecurityAdminUserBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>MonitoringViewBean</managed-bean-name>
  <managed-bean-class>eu.smoothit.sis.admin.backendBean.MonitoringViewBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <navigation-case>
   <from-outcome>iopConfig</from-outcome>
   <to-view-id>/admin/ioPConfig.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>hapConfig</from-outcome>
   <to-view-id>/admin/hapConfig.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  
  <navigation-case>
   <from-outcome>ipRangeList</from-outcome>
   <to-view-id>/admin/ipRangeConfig.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>metering</from-outcome>
   <to-view-id>/admin/metering.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>log</from-outcome>
   <to-view-id>/admin/logViewer.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>monitoring</from-outcome>
   <to-view-id>/admin/monitoringViewer.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>userRole</from-outcome>
   <to-view-id>/admin/securityAdmin.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>componentConfig</from-outcome>
   <to-view-id>/admin/componentConfig.jsf</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/admin/metering.jsp</from-view-id>
  <navigation-case>
   <from-outcome>navigateToIPRangeConfig</from-outcome>
   <to-view-id>/admin/ipRangeConfig.jsf</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <validator>
  <validator-id>pswValidator</validator-id>
  <validator-class>eu.smoothit.sis.admin.util.SecurityAdminUserPswValidator</validator-class>
 </validator>
 <validator>
  <validator-id>roleGroupNonDuplicatValidator</validator-id>
  <validator-class>eu.smoothit.sis.admin.util.SecurityAdminRoleGroupValidator</validator-class>
 </validator>
 <application>
  <view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
 </application>
</faces-config>
